<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".fragments.HomeFragment"
    >


    <ImageView
        android:id="@+id/google_icon"
        android:contentDescription="@string/desc_pickwhere_lockup"
        android:src="@drawable/heart_logo_trans"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/app_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:theme="@style/ThemeOverlay.MyTitleText"
        android:background="#07000000"
        android:layout_marginTop="67dp"
        android:alpha=".9"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:layout_alignTop="@+id/google_icon"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/map_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Debribrillator Map"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/cpr_help_button" />

    <Button
        android:id="@+id/profile_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Profile / History"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:layout_below="@+id/app_name_text_view"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/cpr_help_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CPR Help"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:layout_above="@+id/map_button"
        android:layout_alignStart="@+id/profile_button" />

    <Button
        android:id="@+id/google_sign_out_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sign Out"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/map_button" />

